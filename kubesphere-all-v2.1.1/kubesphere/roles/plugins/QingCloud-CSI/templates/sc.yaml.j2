apiVersion: storage.k8s.io/v1
kind: StorageClass
metadata:
  name: csi-qingcloud
  annotations:
    storageclass.kubesphere.io/supported_access_modes: '["ReadWriteOnce"]'
    storageclass.beta.kubernetes.io/is-default-class: "{% if qingcloud_csi_is_default_class %}true{% else %}false{% endif %}"
provisioner: {{ oldCsiDriverName | default("disk.csi.qingcloud.com") }}
parameters:
  type: "{{ qingcloud_type }}"
  maxSize: "{{ qingcloud_maxSize }}"
  minSize: "{{ qingcloud_minSize }}"
  stepSize: "{{ qingcloud_stepSize }}"
  fsType: "{{ qingcloud_fsType }}"
  replica: "{{ qingcloud_disk_replica }}"
{% if qingcloud_storageclass_tags is defined and qingcloud_storageclass_tags != None %}
  tags: "{{ qingcloud_storageclass_tags }}"
{% endif %}
reclaimPolicy: Delete 
allowVolumeExpansion: {{ qingcloud_allowVolumeExpansion }}
volumeBindingMode: {{ qingcloud_volumeBindingMode }}